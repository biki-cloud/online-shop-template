# This is an example of your .env file format, which pnpm db:setup will create.
# Note: this must be .env, not .env.local, without further configuration changes.

# Supabaseの設定
# ローカルで動作するSupabaseのURL
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"

# Supabaseの匿名認証用キー（クライアントサイドで使用可能）
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Supabaseの管理者権限用キー（サーバーサイドでのみ使用）
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Supabaseのストレージ（S3互換）のURL
NEXT_PUBLIC_STORAGE_URL="your-supabase-storage-url"

# Stripe決済の設定
# Stripeのシークレットキー（サーバーサイドでのみ使用）
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Stripeのウェブフックシークレット（支払いイベントの検証用）
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Stripeの公開キー（クライアントサイドで使用可能）
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# アプリケーションの基本設定
# アプリケーションのベースURL（開発環境）
BASE_URL="http://localhost:3000"

# NextAuth.js認証の設定
# 認証用のシークレットキー（32文字以上のランダムな文字列を設定）
AUTH_SECRET="generate-a-secure-auth-secret-key"

# NextAuth.jsの暗号化キー（32文字以上のランダムな文字列を設定）
NEXTAUTH_SECRET="generate-a-secure-nextauth-secret"

# NextAuth.jsのベースURL（開発環境）
NEXTAUTH_URL="http://localhost:3000"

# PostgreSQLデータベースの接続URL
POSTGRES_URL="postgresql://postgres:postgres@localhost:5432/your_database_name"
